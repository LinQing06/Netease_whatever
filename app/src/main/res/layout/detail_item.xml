<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/list_number_pos"
        android:layout_width="50dp"
        android:text="1"
        android:textSize="25sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/music_name"
        app:layout_constraintLeft_toRightOf="@+id/list_number_pos"
        android:layout_width="280dp"

        android:text="california dreaming"
        android:textSize="20sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/list_author"
        android:text="the mamas the papas"
        android:paddingTop="30dp"
        app:layout_constraintLeft_toRightOf="@+id/list_number_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:src="@mipmap/icon_more"
        app:layout_constraintLeft_toRightOf="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />




</android.support.constraint.ConstraintLayout>
